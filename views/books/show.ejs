<h2><%= book.title %></h2>
<img height="150" width="100" src="<%= book.coverImagePath %>">

<h3>Author: <%= book.author.name %></h3><br>
<h3>Publish Date: <%= book.publishDate.toDateString() %></h3><br>
<h3>Page Count: <%= book.pageCount %></h3><br>
<h3>Description: <%= book.description %></h3>

<!-- Edit button -->
<a href="/books/<%= book.id %>/edit">Edit</a>
<!-- View author button -->
<a href="/authors/<%= book.author.id %>">View Author</a>
<!-- Delete button -->
<%- include('../partials/deleteForm',
            { url: `/books/${book.id}` }) %>




<%- include('../partials/errorMessage') %> 