<h2><%= author.name %></h2>
<a href="/authors/<%= author.id %>/edit">Edit</a>
<a href="/books/new">Add book for <%= author.name %></a>
<%- include('../partials/deleteForm',
            { url: `/authors/${author.id}` }) %>

<br>

<br>
<div>
    <% if(booksByAuthor.length > 0) { %>
        <h2>Books By Author</h2>
        <% booksByAuthor.forEach(book => { %>
            <a href="/books/<%= book.id %>">
                <img height="150" width="100" src="<%= book.coverImagePath %>">
            </a>
        <% }) %> 
    <% } else { %>
        <h2><%= author.name %> has no added books in Mybrary!</h2>
    <% } %>
</div>

<%- include('../partials/errorMessage') %> 


